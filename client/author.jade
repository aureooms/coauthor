template(name='author')
  if groupData
    .panel.panel-primary
      .panel-heading.clearfix
        span.title.panel-title Author &ldquo;#{displayUser}&rdquo; (username &lsquo;#{author}&rsquo;, email !{email})
        .message-right-buttons.btn-group.pull-right.hidden-print
          a.btn.btn-default.statsButton(href="{{pathFor 'stats' group=group username=author}}") Statistics
      .panel-body
        each messages
          +readMessageHeader
      .panel-footer
        i= messageCount
        | by #{author} in group #{group}
        span.space
        //-
          xxx can't search global yet -- would need to adjust publication
          if wildLink
            a.btn.btn-warning(href=wildLink) Search All Groups
  else
    +badGroup
